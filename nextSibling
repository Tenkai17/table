	<script>
		var div=document.getElementById("2");
		var ndiv=document.createElement("div");
		ndiv.innerHTML="new Div";
		if(div.nextSibling){
		div.parentNode.insertBefore(ndiv,div.nextSibling);
		}else{
		div.parentNode.appendChild(ndiv);
		}
	</script>

